
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer

  div.social.center
    div.network
      a(class="hn-link",href="javascript:window.location=%22http://news.ycombinator.com/submitlink?u=%22+encodeURIComponent(document.location)+%22&amp;t=%22+encodeURIComponent(document.title)") Discuss on Hacker News
    div.network.twitter
      a("https://twitter.com/share", class="twitter-share-button", data-via="chri_hartmann" data-count="none") Tweet

  div.nav
    a(href=contents.index.url) Â« Full blog


